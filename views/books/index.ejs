<h2 class="page-header">Search Books</h2>
<form class="form" action="/books" method="get">
  <div class="form-row">
    <div class="form-item">
      <label for="title">Title</label>
      <input type="text" name="title" value="<%= searchOptions.title %> " />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="publishedAfter">Published After</label>
      <input
        type="date"
        name="publishedAfter"
        value="<%= searchOptions.publishedAfter %> "
      />
    </div>

    <div class="form-item">
      <label for="publishedBefore">Published Before</label>
      <input
        type="date"
        name="publishedBefore"
        value="<%= searchOptions.publishedBefore %> "
      />
    </div>
  </div>

  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>

