<h2>Search Books</h2>
<form class="form" action="/books" method="get">
  <div class="form__group">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= searchOptions.title %> " />
  </div>

  <div class="form__group">
    <label for="publishedAfter">Published After</label>
    <input
      type="date"
      name="publishedAfter"
      value="<%= searchOptions.publishedAfter %> "
    />
  </div>

  <div class="form__group">
    <label for="publishedBefore">Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore %> "
    />
  </div>

  <div class="form__group">
    <button type="submit">Search</button>
  </div>
</form>

<br />
<!-- Here since we passed in the allAuthors object we can loop through it and display each ones name -->
<div class="form__group">
  <% books.forEach(book=>{ %>
  <img height="150" width="100" src="<%= book.coverImgPath %> " alt="" />
  <%}) %>
</div>
